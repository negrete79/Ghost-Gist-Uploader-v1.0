}

.install-dismiss:hover {
    color: #fff;
}

/* --- CORREÇÃO APLICADA AQUI --- */
@media (max-width: 768px) {
    .install-banner {
        /* Muda o layout para uma coluna centralizada */
        flex-direction: column;
        text-align: center;
        left: 10px;
        right: 10px;
        bottom: 10px;
    }
    
    .install-banner-text {
        /* Remove a margem direita e adiciona espaço abaixo */
        margin-right: 0;
        margin-bottom: 15px;
    }

    .install-banner h3 {
        font-size: 1.1rem; /* Reduz um pouco o tamanho do título */
    }

    .install-banner p {
        font-size: 0.8rem; /* Reduz um pouco o tamanho do texto */
    }
    
    /* Agrupa os botões para alinhá-los */
    .install-banner .install-btn,
    .install-banner .install-dismiss {
        display: inline-block; /* Coloca os botões na mesma linha */
        vertical-align: middle;
    }
}
